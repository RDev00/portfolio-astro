---
export interface Props {
	key?: string,
	title?: string,
	img?: string,
	description?: string
}

const {
	key = "",
	title = "Titulo no ingresado",
	img = "/images/empty.webp",
	description = "Descripcion no ingresada"
} = Astro.props;
---

<section id={key} class="w-full flex flex-col justify-center items-center bg-gray-950 rounded-lg gap-1 px-6 py-4">
	<h2 class="text-lg font-medium text-center"> { title } </h2>
	<article class="flex flex-col md:flex-row justify-center items-center gap-3">
		<img src={ img } alt={ title } class="w-16 h-16 aspect-square rounded-md object-contain bg-white" />
		<p class="opacity-80"> { description } </p>
	</article>
</section>